{
  "name": "cyberpunk-agent",
  "version": "1.0.0",
  "description": "A FoundryVTT module that adds features to the Cyberpunk RED system",
  "main": "scripts/module.js",
  "scripts": {
    "build": "echo 'Build process not implemented yet'",
    "package": "powershell -Command \"Compress-Archive -Path .\\* -DestinationPath .\\cyberpunk-agent.zip -Force\"",
    "clean": "if exist cyberpunk-agent.zip del cyberpunk-agent.zip",
    "setup": "node scripts/setup-dev.js",
    "diagnose": "node scripts/diagnose-module.js",
    "dev:copy": "powershell -Command \"Copy-Item -Path '.\\*' -Destination 'C:\\Users\\danie\\AppData\\Local\\FoundryVTT\\V11\\Data\\modules\\cyberpunk-agent\\' -Recurse -Force -Exclude 'node_modules','.git','cyberpunk-agent.zip','docs'\"",
    "dev:copy-alt": "xcopy .\\* \"C:\\Users\\danie\\AppData\\Local\\FoundryVTT\\V11\\Data\\modules\\cyberpunk-agent\\\" /E /Y",
    "dev:watch": "nodemon --watch scripts --watch __tests__ --watch lang --watch module.json --exec \"npm run dev:copy\"",
    "test": "npm run dev:copy && echo 'Files copied to FoundryVTT. Please refresh your browser.'",
    "dev": "npm run dev:copy && echo 'Development files copied. Refresh FoundryVTT to test changes.'"
  },
